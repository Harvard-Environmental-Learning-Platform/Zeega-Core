{# src/Zeega/EditorBundle/Resources/views/Editor/index.html.twig #}

{% extends '::base.html.twig' %}

{% block title %}Zeega Alpha{% endblock %}

{% block body %}
 	<div class="item-title playground-title" data-id="{{playground.id}}"  data-short="{{playground.short}}" style="font-size: 24px; ">{{playground.title}}</div><br><br>
	<div id="projects">
			<br><br>
			<div id="project-create">
					<ul class="pill-buttons">
						<li><a id="new-project" href="#">Create New Project</a></li>
					</ul>
			</div>
			<div id="projects-lists">
				<div class="item-title" style="font-size: 16px; ">My Projects</div><br><br>
				<div id="my-projects" style="padding-left:5px;">
					<ul>
						{% for project in myprojects %}
							<li class='project-{{project.id}}' style="margin-bottom: 5px; padding: 5px; background-color: #444; border-radius: 3px;"><a href="{{ path('ZeegaEditorBundle_editor', { 'id': project.id,'short': playground.short }) }}" >{{project.title}}</a> <span class="timeStamp"></span> <a class='project-delete' style="color:red; float: right;" data-id="{{project.id}}" href="#">delete</a></li><div style="clear: both;"></div>
						{% endfor %}
					</ul>
				</div>


				<!--<div class="item-title" style="font-size: 16px; ">All Recently Updated Projects in {{playground.title}}</div> <br><br>
				<div id="all-projects" style="padding-left:5px;">
					<ul>
						{% for project in myprojects %}
							<li class='project-{{project.id}}' style="margin-bottom: 5px; padding-top: 8px;"><a>{{project.title}}</a> <span class="timeStamp"> </li><div style="clear: both;"></div>
						{% endfor %}
					</ul>
				</div>-->
			</div> <!--#projects-list-->
			
</div>	<!--#projects-->

{% endblock %}	
{% block scripts %}
      <script data-main="{{ asset('gamma/js/main.playground.js') }}" src="{{ asset('gamma/js/libraries/require-jquery.js')}}"></script>
{% endblock %}