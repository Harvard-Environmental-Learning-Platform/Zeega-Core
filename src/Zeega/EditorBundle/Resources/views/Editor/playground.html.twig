{# src/Zeega/EditorBundle/Resources/views/Editor/index.html.twig #}

{% extends '::base.html.twig' %}

{% block title %}Zeega Alpha{% endblock %}

{% block body %}
 	<div class="item-title playground-title" data-id="{{playground.id}}"  data-short="{{playground.short}}" style="font-size: 24px; ">{{playground.title}}</div><br><br>
	<div id="projects">
			<br>
			<div id="welcome" style="font-size: 24px; color: #65cafc;">Welcome to Zeega, {{displayname}}!</div>
			
			<div id="intro-actions" style="margin-top:35px;">
				<div id="surf-text" style="font-size: 18px; color: #65cafc; float: left; width: 200px;">
				Surf the Web<br>
				<span class="intro-actions-text" style="font-size: 12px; color: #6c6c6c; line-height: .5;">Add images, videos, sounds and more to Zeega with our bookmarklet plugin!</span>
				<br><br>
				<ul class="pill-buttons">
					<li class='item add-media' ><a href="#" style="font-size: 12px;">Add Zeega Bookmarklet</a></li>							
				</ul>
				</div>
				<div id="surf-image" style="float: left; margin-left: 20px;"><img src="{{ asset('gamma/images/surf-graphic.png') }}" /></div>
				
				<div id="collect-text" style="font-size: 18px; color: #65cafc; float: left; width: 200px; margin-left: 30px;">
				Collect & Curate<br>
				<span class="intro-actions-text" style="font-size: 12px; color: #6c6c6c; line-height: .5;">Organize your media into collections and annotate metadata.</span>
				<br><br><br>
				<ul class="pill-buttons">
					<li><a  href="{{ path('ZeegaEditorBundle_browser', { 'short': short })}}" style="font-size: 12px;">Browse & Create Collections</a></li>
				</ul>
				</div>
				<div id="collect-image" style="float: left; margin-left: 20px;"><img src="{{ asset('gamma/images/collect-graphic.png') }}" /></div>
				
				<div id="edit-text" style="font-size: 18px; color: #65cafc; float: left; width: 200px; margin-left: 30px;">
				Edit & Mash Up<br>
				<span class="intro-actions-text" style="font-size: 12px; color: #6c6c6c; line-height: .5;">Use media collected to create your own interactive project.</span>
				<br><br><br>
				<ul class="pill-buttons">
					<li><a id="new-project" href="#" style="font-size: 12px;">Create New Project</a></li>
				</ul>
				</div>
				<div id="edit-image" style="float: left; margin-left: 20px;"><img src="{{ asset('gamma/images/edit-graphic.png') }}" /></div>


			
			<div class="clear" style="clear: both;"></div>
			</div><!--#intro-actions-->
			
			<div id='add-media-new' style='width: 910px; height: 205px; padding: 30px; position:absolute; z-index:100000; top:280px; background-color: white;'>  
			
			<span class="zicon orange zicon-close" style="position: absolute; right: 5px; top: 5px;"></span>

			To install the Zeega bookmarklet, follow the directions below:<br><br><br>
						
				<div id="book-one" style="float: left;">
					<img src="{{ asset('gamma/images/chrome-logo.gif') }}" style="margin-left: 25px;"/>
					<br>
					<br>
					Access Zeega from the<br>
					<a href="http://google.com/chrome" target="_blank">latest Chrome browser</a>
				</div>
				
				<div id="book-two" style="float: left; margin-left: 20px;">
					<img src="{{ asset('gamma/images/view-bookmarks.gif') }}" style="margin-left: 25px; margin-top: 25px;"/>
					<br><br><br>
					<span style="display: block; margin-left: 55px; margin-top: 2px;">
						Under the view menu, select<br>
						"Always show Bookmarks Bar"
					</span>
				</div>
				
				<div id="book-three" style="float: left; margin-left: 20px;">
					<a href="javascript:(function()%7Bvar%20head=document.getElementsByTagName('body')%5B0%5D,script=document.createElement('script');script.id='zeegabm';script.type='text/javascript';script.src='http://dev.zeega.org/kanarinka/web/gamma/js/widget/zeega.bookmarklet.js?'%20+%20Math.floor(Math.random()*99999);head.appendChild(script);%7D)();%20void%200"><img src="{{ asset('gamma/images/drag-zeega.gif') }}" style="margin-left: 25px; margin-top: 0px;" alt="Add to Zeega"/></a>
					<br>
					<span style="display: block; margin-left: 7px; margin-top: 10px;">
						Drag this icon to the<br>
						Bookmark Bar within<br>
						the browser
					</span>

				</div>
				
				<div id="book-four" style="float: left; margin-left: 30px;">
					<img src="{{ asset('gamma/images/bookmark-confirm.gif') }}" style="margin-left: 25px; margin-top: 13px;"/>
					<br>
					<span style="display: block; margin-left: 7px; margin-top: 10px;">
						"Add to Zeega" will now appear in your Bookmarks<br> Bar. As you find media across the web, click this<br> to open the bookmarklet plugin.
					</span>

				</div>
				
			<div class="clear" style="clear: both;"></div>
			</div><!--#add-media-->

			
			<div id="projects-lists">
				<div id='my-projects' class="item-title projects" style="font-size: 16px; ">My Projects</div><div id='all-projects' class="item-title projects" style="font-size: 16px; opacity:0.6; cursor:pointer; ">All Projects</div><br><br>
				<div id="my-projects-container" class="projects-container my-projects-container" style="padding-left:5px;">
					<ul>
						{% for project in myprojects %}
							<li class='project-{{project.id}}' style="margin-bottom: 5px; padding: 5px; background-color: #444; border-radius: 3px;"><a href="{{ path('ZeegaEditorBundle_editor', { 'id': project.id,'short': playground.short }) }}" class="white">{{project.title}}</a> <span class="timeStamp"></span> <a class='project-delete' style="color:red; float: right;" data-id="{{project.id}}" href="#">delete</a></li><div style="clear: both;"></div>
						{% endfor %}
					</ul>
				</div>


				<!--<div class="item-title" style="font-size: 16px; ">All Recently Updated Projects in {{playground.title}}</div> <br><br>
				-->
				<div id="all-projects-container" class="projects-container all-projects-container" style="padding-left:5px; display:none;">
					<ul>
						{% for project in allprojects %}
							<li class='project-{{project.id}}'  style="margin-bottom: 5px; padding: 5px; background-color: #444; border-radius: 3px;"><a target="_blank" href="{{hostname}}{{directory}}project/{{project.id}}/view">{{project.title}}</a> <span class="timeStamp"> </li><div style="clear: both;"></div>
						{% endfor %}
					</ul>
				</div>
			</div> <!--#projects-list-->
			
</div>	<!--#projects-->

{% endblock %}	
{% block scripts %}
      <script data-main="{{ asset('gamma/js/main.playground.js') }}" src="{{ asset('gamma/js/libraries/require-jquery.js')}}"></script>
      <script> 
			sessionStorage.setItem('playgroundShort', '{{playground.short}}');
			sessionStorage.setItem('playgroundId','{{playground.id}}');
		</script>
{% endblock %}