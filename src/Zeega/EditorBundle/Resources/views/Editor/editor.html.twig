			<script type="text/javascript" language="Javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
				<script src="http://s3.documentcloud.org/viewer/loader.js"></script>
			
			<script src="{{ asset('js/aloha-config.js') }}" language="javascript"></script>
			<script src="{{ asset('js/libraries/aloha-rc9/lib/aloha.js') }}" data-aloha-plugins="common/format,common/highlighteditables"></script>

			<script src="{{ asset('js/main.editor.js') }}"></script>

			<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
			
			<script type="text/javascript" language="Javascript">
				//bootstrapping data
				var itemsJSON = "{{ results|e('js') }}";
