						<li><a id="add-user" href="#">Add Existing User</a></li>
						
					</ul>
			</div>
			<div >

				<div class="item-title" style="font-size: 16px; ">Recently Upated Projects</div> <br><br>
				<div style="padding-left:20px;">
					<ul>
						{% for project in projects %}
							<li><a>{{project.title}}</a> <span class="timeStamp"> - </span> <a class='project-delete' style="color:red" data-id="{{project.id}}" href="#">delete</a></li>
						{% endfor %}
					</ul>
				</div>
			</div> <!--#projects-list-->
			
</div>	<!--#projects-->

