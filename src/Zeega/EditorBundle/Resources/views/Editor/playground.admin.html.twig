{% extends '::base.html.twig' %}

{% block title %}Zeega Alpha{% endblock %}

{% block body %}
 	<div class="item-title" style="font-size: 24px; ">{{playground.title}}</div><br><br>
 	<div class="item-title" style="font-size: 14px; ">{{message}}</div><br><br>
 	<div id="projects">
			<br><br>
	
			
			<br><br>
			
	
				

				<br></br>
				<div class="item-title" style="font-size: 16px; ">Users</div> <br><br>
				<div style="padding-left:20px;">
					<ul>
						{% for user in users %}
							<li><a>{{user.display_name}}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div><br><br>
			<div id="new-user-add-button" style="padding-left:20px;">
