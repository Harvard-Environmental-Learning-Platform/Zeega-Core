{# src/Zeega/EditorBundle/Resources/views/Editor/index.html.twig #}

{% extends '::base.html.twig' %}

{% block title %}Zeega Alpha{% endblock %}

{% block body %}

<div class="item-title" style="font-size: 24px; ">{{displayname}}</div><br><br>
<div class="item-title" style="font-size: 14px; ">{{message}}</div><br><br>
<div style="clear:both;"></div>
 <br><br>
<div id="user-info" style="color:white">
	<div id="user-thumb" style="width:105px; height: 105px; float:left; border: 2px solid white;" ><img width="105px" height="105px" src="{{thumb}}" /></div>
	<div id="user-bio" style="padding-left: 20px; width:380px; height:100px; float:left" >{{ bio }}</div>
</div>
<div style="clear:both;"></div>
<br><br>
			{% if super %}

				<div id='add-site'>
					<ul class="pill-buttons">
						<li><a  href="#">Create New Site</a></li>
					</ul>
				</div>
				
			{% endif %}
			
			
			<div id="sites-list">
				<div class="item-title" style="font-size: 16px; ">My Sites</div><br><br>
				<div id="my-projects" style="padding-left:5px;">
					{% for site in sites %}
						<li style="margin-bottom: 5px; padding: 5px; background-color: #444; border-radius: 3px;"><a href="{{ path('ZeegaCoreBundle_site', { 'short': site.short }) }}" class="white">{{site.title}}</a><span class="timeStamp"></span></li> 
					{% endfor %}
				</div>
			</div> <!--#sites-list-->



<br><br>
			
<br><br>


{% endblock %}		

