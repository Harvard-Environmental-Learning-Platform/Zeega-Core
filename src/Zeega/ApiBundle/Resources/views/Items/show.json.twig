{
"items":
[
	{% if load_children is not defined %}
		{% set load_children = false %}
	{% endif %}
	
	{% if userIsAdmin is defined and user is defined %}
		{% include 'ZeegaApiBundle:Items:base.json.twig' with {'item': item, 'userIsAdmin': userIsAdmin, 'user': user, 'load_children':load_children} %}
	{% else %}
		{% include 'ZeegaApiBundle:Items:base.json.twig' with {'item': item, 'load_children':load_children} %}
	{% endif %}
],
	"request":
		{% if request is defined %}
			{{ request | json_encode | raw}}
		{% else %}
		{}
		{% endif %}
}