{# src/Zeega/CommunityBundle/Resources/views/Contact/contact.html.twig #}

{% extends '::base.html.twig' %}

{% block title %}Zeega{% endblock %}


{%  block stylesheets %}
	<!--- FOR DEVELOPMENT ONLY -- Less CSS files are cached in localStorage so we have to empty that or else your CSS changes will never take effect and you will beat your head on your keyboard and get a big bruise -->

	<script type="text/javascript">
		window.localStorage.clear();
	</script>
	<style type="text/css">
	
		/*
			Background image code lives here, not in CSS, because this is specific to each page
			and could be made dynamic too (i.e. randomly picking a different image each load)
			quite easily. Exposing the code here should be helpful.
		*/
	
		html { 
		background: url(http://25.media.tumblr.com/tumblr_m5ekm3RTgN1qg39ewo1_500.gif) no-repeat center center fixed; 
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
		
		}
		
	
	</style>
	
	
	<!-- Less -- LOAD variables.less FIRST and then other stuff and then style.less at the end -->
	<link rel="stylesheet/less" type="text/css" href="{{ asset('css/less/community/bootstrap.less')}}">

	<link href='http://fonts.googleapis.com/css?family=Podkova:400,700' rel='stylesheet' type='text/css'> <!-- Including Google's Font -->
	<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700' rel='stylesheet' type='text/css'>

	
	
{% endblock %}

{% block scripts %}

	<script type="text/javascript" language="Javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
	<script data-main="{{ asset('js/loaders/home') }}" src="{{ asset('js/lib/require.js') }}"></script>
	
	<script type="text/javascript" language="Javascript" src="{{ asset('js/lib/less-1.3.0.min.js') }}"></script>
	
	
{% endblock %}

{% block body %}
<div class="gifcredit"><a href="http://gifmovie.tumblr.com" target="_blank">gifmovie.tumblr.com</a></div>
<!-- Background Color Div - creates the transparent layer over the background image -->
	<div id="background-color">
	</div>
	<!-- Background Color Div ends -->
	
	<!-- Page Intro Begins -->
	
	<div class="container new-section">
	
		<div class="row">
	
			<div class="page-intro span11">
			
				<h3>Contact</h3>
				<br>
				<span class="contact-pink"><h2>info[at]zeega.org</h2></span><br>
				<span class="contact-pink"><h2>364a Broadway, Cambridge MA 02139</h2></span><br>
				<span class="contact-pink"><h2>Twitter <a href="https://twitter.com/#!/zeega" target="_blank">@zeega</a></h2></span><br><br>
				
				<h3>Mailing List</h3>
				<br>
				
				<div id="thanks" class="hide">
					Wahoo! Check your email to confirm.
				</div><!--#thanks-->
				
				<form id="signupForm" class="form-vertical">
			          <div class="box">
			               <input type="text" name="Name" id="name" value="Name"/>

			               <input type="email" name="Email" id="email" value="Email"/>
			  				<br>
			                <input id="signUpSubmit" type="button" class="btn btn-large btn-success btn-custom" value="Submit"	 />
			            
			            <div class="clear"></div>
			         </div>
			    </form>
			
			</div>
		
		</div>
	<br><br><br><br><br><br><br><br><br><br><br><br>
	</div>
	
	<!-- Page Intro Ends -->
	
	


{% endblock %}